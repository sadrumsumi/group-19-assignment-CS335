<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Signup</title>
    <!-- Custom fonts for this template-->
    <link
      href="/assets/vendor/fontawesome-free/css/all.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />
    <!-- Custom styles for this template-->
    <link href="/assets/css/sb-admin-2.min.css" rel="stylesheet" />
  </head>

  <body class="bg-gradient-primary">
    <div class="container">
      <!-- Outer Row -->
      <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
          <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
              <!-- Nested Row within Card Body -->
              <div class="row">
                <div class="col-lg-6 d-none d-lg-block"></div>
                <div class="col-lg-6">
                  <div class="p-5">
                    <div class="text-center">
                      <h1 class="h4 text-gray-900 mb-4">Registration Form</h1>
                      <label style="color: red"><%= error %></label>
                    </div>
                    <form class="user" method="POST" action="/signup">
                      <div class="form-group">
                        <input
                          class="form-control form-control-user"
                          id="phone"
                          min="1"
                          type="number"
                          name="phone"
                          aria-describedby="emailHelp"
                          placeholder="Phone..."
                        />
                      </div>
                      <div class="form-group">
                        <input
                          class="form-control form-control-user"
                          id="email"
                          type="email"
                          name="email"
                          aria-describedby="emailHelp"
                          placeholder="Email..."
                        />
                      </div>
                      <div class="form-group">
                        <input
                          type="password"
                          class="form-control form-control-user"
                          id="password"
                          name="password"
                          placeholder="Password"
                        />
                      </div>
                      <div class="form-group">
                        <input
                          type="password"
                          class="form-control form-control-user"
                          id="cpassword"
                          name="cpassword"
                          placeholder="Confirm Password..."
                        />
                      </div>
                      <div class="form-group">
                        <div class="custom-control custom-checkbox small">
                          <input
                            type="checkbox"
                            class="custom-control-input"
                            id="customCheck"
                          />
                          <label class="custom-control-label" for="customCheck"
                            >Remember Me</label
                          >
                        </div>
                      </div>
                      <button
                        type="submit"
                        class="btn btn-primary btn-user btn-block"
                      >
                        Send
                      </button>
                      <input
                        style="display: none"
                        id="ip"
                        type="text"
                        name="ip"
                      />
                      <input
                        style="display: none"
                        id="city"
                        type="text"
                        name="city"
                      />
                      <input
                        style="display: none"
                        id="district"
                        type="text"
                        name="district"
                      />
                      <input
                        style="display: none"
                        id="latitude"
                        type="text"
                        name="latitude"
                      />
                      <input
                        style="display: none"
                        id="longitude"
                        type="text"
                        name="longitude"
                      />
                      <input
                        style="display: none"
                        id="country_flag"
                        type="text"
                        name="country_flag"
                      />
                      <input
                        style="display: none"
                        id="country_name"
                        type="text"
                        name="country_name"
                      />
                    </form>
                    <div class="text-center">
                      <a class="small" href="/signin">Signin</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- axios -->
    <script src="/axios.min.js"></script>
    <!-- Bootstrap core JavaScript-->
    <script src="/assets/vendor/jquery/jquery.min.js"></script>
    <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="/assets/js/sb-admin-2.min.js"></script>
    <script>
      $(document).ready(function () {
        axios
          .get(
            "https://api.ipgeolocation.io/ipgeo?apiKey=81ed09d93b2f4f6baecc9e368ab3119b"
          )
          .then(({ data }) => {
            $("#ip").val(`${data["ip"]}`);
            $("#city").val(`${data["city"]}`);
            $("#district").val(`${data["district"]}`);
            $("#latitude").val(`${data["latitude"]}`);
            $("#longitude").val(`${data["longitude"]}`);
            $("#country_flag").val(`${data["country_flag"]}`);
            $("#country_name").val(`${data["country_name"]}`);
          })
          .catch((error) => {
            console.log(error);
          });
      });
    </script>
  </body>
</html>
